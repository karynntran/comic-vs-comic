<!DOCTYPE html>
<html>
<head>
	<title>Comic SmashUp</title>	

	<%= stylesheet_link_tag    'application', media: 'all'  %>

	<link href='http://fonts.googleapis.com/css?family=Permanent+Marker|Combo' rel='stylesheet' type='text/css'>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width", initial-scale=1, maximum-scale=1>
	
</head>

<body>
	<div class="container">
		<div class="row">
			<header class="twelve columns">
				<div class="six columns">
					<h1><%= link_to "Comic Smash Up!", root_url, id: "title" %></h1>
				</div>
				<div class="six columns">
					<%= render 'home/navigation' %>
				</div>
			</header>
		</div>
	</div>		

	<div id="game-area">

		<%= yield %>

		<ul class="characters">

		<%= render 'home/winner' %>
		<%= render 'home/carousel' %>

		</ul>
		<script type='template' id='character-list-item-template'>
		<%= render 'home/character' %>
		</script>

		<!-- 	 home scripts -->
		<script type='template' id='result-template'>
		<%= render 'home/results' %>
		</script>

		<script type='template' id='opponent-template'>
		<%= render 'home/opponent' %>
		</script>

		<script type='template' id='story-template'>
		<%= render 'home/story' %>
		</script>
	</div>
</body>

<%= javascript_include_tag 'application' %>
</html>
